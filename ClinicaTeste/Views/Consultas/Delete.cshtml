@model ClinicaTeste.Models.Consulta

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Deletar</h1>

<h3>Você tem certeza que quer DELETAR uma consulta?</h3>
<div>   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>ID do Paciente</label>
            @* @Html.DisplayNameFor(model => model.IdPaciente) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPaciente)
        </dd>
        <dt class = "col-sm-2">
            <label>Data da Consulta</label>
            @* @Html.DisplayNameFor(model => model.DataConsulta) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataConsulta)
        </dd>
        <dt class = "col-sm-2">
            <label>ID do Médico</label>
            @* @Html.DisplayNameFor(model => model.IdMedico) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMedico)
        </dd>
        <dt class = "col-sm-2">
            <label>Ficha Médica</label>
            @* @Html.DisplayNameFor(model => model.FichaMedica) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FichaMedica)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdConsulta" />
        <input type="submit" value="Deletar" class="btn btn-danger" />&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;
        <a asp-action="Index">Voltar a Lista</a>
    </form>
</div>
