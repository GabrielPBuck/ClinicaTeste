@model IEnumerable<ClinicaTeste.Models.Paciente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastro de Pacientes</h1>
<hr />

<p>
    <a asp-action="Create">Cadastrar Paciente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPaciente">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdPaciente">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPaciente">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
